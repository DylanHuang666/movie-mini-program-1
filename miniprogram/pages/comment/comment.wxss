/* pages/comment/comment.wxss */
.detail-container{
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
  overflow: hidden;
}
.box{
  position: absolute;
  top: 0;
  left: 0;
  background-color: #333;
  width: 100%;
  height: 400rpx;
  z-index: -1;
}
.wrapper{
  position: absolute;
  top: 0;
  left: 0;
  width: 710rpx;
  padding: 20rpx;
  display: flex;
  height: 360rpx;
}
.img{
  width: 280rpx;
  height: 360rpx;
}
.movie-info{
  flex: 1;
  margin-left: 10px;
  color: white;
}
.movie-info view{
  margin-bottom: 5px;
}
.movie-title{
  font-size: 40rpx;
  font-weight: bolder;
}
.movie-average text{
  color: #faaf00;
}
.summary{
  font-size: 30rpx;
  color: #888;
  padding: 18rpx;
}
.comment-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 16rpx;
}
.img-box{
  margin-top: 18rpx;
}
.about{
  margin-left: 18rpx;
  margin-top: 10rpx;
}
